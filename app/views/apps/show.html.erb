<p id="notice"><%= notice %></p>
<% @title = @app.author+"/"+@app.appid %>

<h1>
<%= link_to( @app.author ) %>
/
<%= link_to( @app.appid ) %>
<a id="star">Star</a>
</h1>

<div class="main">
  <article>
    <%= link_to("ダウンロード", {controller: "apps", action: "download"}, class: "button") %>
    <div class="app-name"><%= @app.name %></div>
    <div class="desc">
      <% if( @app.desc.present? ) %>
        <%= @app.desc %>
      <% else %>
        説明はありません。
        <% end %>
    </div>
    アプリの作者<br>
    <%= link_to( @app.author ) %><br>
    ジャンル<br>
    <%= link_to( @app.genre ) %><br>
    作者のWebサイト<br>
    <%= link_to( "Webサイトへアクセス", @app.url ) %><br>
    アプリの操作<br>
    <%= link_to '編集', edit_app_path(@app) %> / <%= link_to '削除', @app, method: :delete, data: { confirm: 'Are you sure?' } %><br>
  </article>
</div>

<%= link_to 'アプリ一覧へ', apps_path %>
