<%= form_with(model: app, local: true) do |form| %>
  <% if app.errors.any? %>
    <div id="error_explanation">
      <div>エラー(<%= app.errors.count %>)</div>
      <% app.errors.full_messages.each do |message| %>
        <div>・<%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :app_name %>
  </div>

  <div class="field">
    <%= form.label :appid %>
    <%= form.text_field :appid, id: :app_appid %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :app_author %>
  </div>

  <div class="field">
    <%= form.label :desc %>
    <%= form.text_field :desc, id: :app_desc %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.text_field :genre, id: :app_genre %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, id: :app_url %>
  </div>

  <div class="field">
    <%= form.label :data %>
    <%= form.file_field :data, id: :app_data %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
